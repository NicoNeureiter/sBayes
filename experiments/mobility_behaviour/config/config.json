{
	"data": {
		"features": "../data/features/simulated_features.csv",
		"feature_states": "../data/features/simulated_feature_states.csv",
		"projection": "todo"
	},
	"model": {
		"clusters": 2,
		"sample_source": false,
		"confounding_effects": {
			"age": [
				"young",
				"working",
				"elderly"
			],
			"universal": [
				"all"
			],
			"family": [
				"fam1",
				"fam2",
				"<NA>"
			]
		}
		"prior": {
			"objects_per_cluster": {
				"type": "uniform_size",
				"min": 3,
				"max": 50
			},
			"geo": {
				"type": "uniform"
			},
			"weights": {
				"type": "uniform"
			},
			"areal_effect": {
				"type": "uniform"
			},
			"confounding_effects": {
				"age": {
					"young": {
						"type": "uniform"
					},
					"working": {
						"type": "uniform"
					},
					"elderly": {
						"type": "uniform"
					}
				}
			}
		}
	},
	"mcmc": {
		"steps": 10000,
		"samples": 100,
		"runs": 1,
		"grow_to_adjacent": 0.85,
		"operators": {
			"clusters": 5,
			"weights": 40,
			"areal_effect": 30,
			"confounding_effects": 30,
			"source": 10
		},
		"init_objects_per_cluster": 5,
		"warmup": {
			"warmup_steps": 1000,
			"warmup_chains": 3
		}
	},
	"results": {
		"path": "results",
		"log_file": true
	},
	"settings_for_linguists": {
		"isolates_as_universal": true
	}
